{
  "name": "openapi-typescript-generator",
  "version": "1.0.0",
  "description": "OpenAPI to TypeScript code generator using MCP",
  "main": "dist/server/index.js",
  "type": "module",
  "bin": {
    "openapi-to-mcp": "dist/cli/openapi-to-mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "dev": "ts-node src/server/index.ts",
    "cli": "npm run build && node dist/cli/openapi-to-mcp.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "change-case": "^4.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/xml2js": "^0.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "prettier": "^3.5.3"
  }
}
